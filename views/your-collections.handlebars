<div class="ui massive menu">
    <a class="item" href="/">
        <h1 class="ui white inverted header">CollectBay</h1>
    </a>


    <div class="right menu">
        <a class="item" href="/collect">
            <h4 class="ui white inverted header">Collect</h4>
        </a>
        <a class="item" href="/ebay">
            <h4 class="ui white inverted header">Ebay</h4>
        </a>
        <a class="item" href="/connect">
            <h4 class="ui white inverted header">Connect</h4>
        </a>
        <a class="item" href="/dbcollections">
            <h4 class="ui white inverted header">Your Collections</h4>
        </a>
        {{!-- <div class="item">
            <div class="ui icon input">
                <input type="text" placeholder="Search..." />
                <i class="search link icon"></i>
            </div>
        </div> --}}
    </div>

</div>

<div class="ui piled segment center aligned">
    <h1 class="ui header center aligned">Your Collections</h1>
    <h4 class="ui header center aligned">These are your favorite collections saved in the database</h4>
</div>

<div class="ui segment">
    <h1>Your Collections: </h1>

    <div class="ui four column grid">
        {{#each collections}}
        <div class="column">
            <div class="ui fluid card">
                <div class="image">
                    <img src="{{image}}">
                </div>
                <div class="content">
                    <a class="header">{{title}}</a>
                    <hr>
                    <p>Item ID: {{itemid}}</p>
                    <hr>
                    <p>Category: {{category}}<p>
                            <hr>
                            <p>Location: {{location}}</h4>
                                <hr>
                                <p>Price (USD): ${{price}}</p>
                                <hr>
                                <p>Ebay Link: <a href="{{ebayurl}}">{{ebayurl}}</a></p>
                                <hr>
                                <button  class="ui secondary button delete-collection"
                                    data-id="{{itemid}}">Delete Collection</button>
                                    

                </div>
            </div>
        </div>
        <!-- MODAL -->
        <div id="want-to-delete" class="ui basic modal">
            <div class="content">
                <p>Are you sure you want to delete this collection?</p>
            </div>
            <div class="actions">
                <div class="ui red basic cancel inverted button" data-value="no"><i class="remove icon"></i>No</div>
                <div class="ui green ok inverted button" data-value="yes"><i class="checkmark icon"></i>Yes</div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
