<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js"></script>
<script type="text/javascript" src="/assets/js/ebay.js"></script>

<h1>eBay Search Results</h1>

<h4>Search eBay for your favorite collections</h4>

<div class="ui input">
    <input id="search-term" type="text" placeholder="Search Term ...">
    <button id="search-ebay" class="ui right labeled icon button">
        <i class="search icon"></i>Search</button>
</div>
<hr>
<h1>This are your results: </h1>
<pre>{{ebayCollections}}</pre>
<div class="ui four column grid">
    {{#each ebayCollections}}
  <div class="column">
    <div class="ui fluid card">
      <div class="image">
        <img src="{{galleryURL}}">
      </div>
      <div class="content">
        <a class="header">{{title}}e</a>
        <hr>
        <p>Item ID: {{itemId}}</p>
        <hr>
        <p>Category: {{primaryCategory.categoryName}}<p>
        <hr>
        <p>Location: {{location}}</h4>
        <hr>
        <p>Price: {{sellingStatus.currentPrice}}</p>
        <hr>
        <p>Condition: {{condition.conditionDisplayName}}</p>
        <hr>
        <button class="btn btn-dark add-to-collection" data-title="{{title}}" data-category="{{primaryCategory.categoryName}}"
                        data-location="{{location}}" data-price="{{sellingStatus.currentPrice}}" data-condition="{{condition.conditionDisplayName}}" data-image-url={{galleryURL}}>Add to Your Collection</button>
      </div>
    </div>
  </div>
  {{/each}}
</div>

